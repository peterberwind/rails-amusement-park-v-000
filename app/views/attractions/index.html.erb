<h1>Listing attractions</h1>
<table>
  <tbody>
    <tr>
      <td>
        Picture
      </td>
      <td>
        Name
      </td>
      <td>
        Tickets	Details
      </td>
      <td>
      </td>
    </tr>
    <% @attractions.each do |att| %>
    <tr>
      <td>
        <img src="http://www.allthingsclipart.com/05/amusement.park.05.jpg" width="100">
      </td>
      <td>
        <%= att.name %>
      </td>
      <td>
        <%= att.tickets %>
      </td>
      <td>
        <% if current_user.admin %>
          <%= link_to "Show #{att.name}", attraction_path(att) %>
        <% else %>
          <%= link_to "Go on #{att.name}", attraction_path(att) %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.admin %>
  <%= link_to "New Attraction", new_attraction_path %>
<% end %>
